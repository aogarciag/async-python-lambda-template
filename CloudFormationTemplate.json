{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "PythonLambda": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Handler": "dist/main.handler",
        "Code": {
          "ZipFile": { "Fn::Join": ["\n", ["def handler(event, context):", "pass"]] }
        },
        "Runtime": "python3.7",
        "Timeout": 5
      }
    },
    "PythonLambdaS3Bucket": {
      "Type": "AWS::S3::Bucket",
      "DeletionPolicy": "Retain",
      "Properties": {
        "BucketName": "PythonLambdaS3Bucket"
      }
    },
    "PythonLambdaS3BucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": { "Ref": "PythonLambdaS3Bucket" },
        "PolicyDocument": {
          "Statement": [
            {
              "Action": ["s3:PutObject"],
              "Effect": "Allow",
              "Resource": { "Fn::Join": ["", ["arn:aws:s3:::", { "Ref": "PythonLambdaS3Bucket" }, "/*"]] },
              "Principal": {
                "Fn::GetAtt": ["PythonLambda", "Arn"]
              }
            }
          ]
        }
      }
    }
  }
}
