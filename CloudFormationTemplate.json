{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "PythonLambdaRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": ["lambda.amazonaws.com"]
              },
              "Action": ["sts:AssumeRole"]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "PythonLambdaRolePolicy",
            "PolicyDocument": {
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": ["logs:CreateLogGroup", "logs:CreateLogStream", "logs:PutLogEvents"],
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "PythonLambdaS3Bucket": {
      "Type": "AWS::S3::Bucket",
      "DeletionPolicy": "Delete"
    },
    "PythonLambda": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Handler": "handler.handler",
        "Code": {
          "ZipFile": { "Fn::Join": ["\n", ["def handler(event, context):", "pass"]] }
        },
        "Runtime": "python3.7",
        "Timeout": 5,
        "Role": {
          "Fn::GetAtt": ["PythonLambdaRole", "Arn"]
        }
      }
    },
    "PythonLambdaS3BucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": { "Ref": "PythonLambdaS3Bucket" },
        "PolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Action": "s3:*",
              "Principal": {
                "AWS": { "Fn::GetAtt": ["PythonLambdaRole", "Arn"] }
              },
              "Resource": {
                "Fn::Join": ["", ["arn:aws:s3:::", { "Ref": "PythonLambdaS3Bucket" }, "/*"]]
              }
            }
          ]
        }
      }
    }
  }
}
